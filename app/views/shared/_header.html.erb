<header data-controller="menu" class="bg-white">
  <div class="container mx-auto flex flex-wrap px-4 md:px-0 py-3 flex-row items-center">
    <%= link_to root_path, class: "flex title-font font-medium items-center text-gray-900" do %>
      <span class="text-xl font-bold">Inclusive Hub</span>
    <% end %>
    <% unless content_for?(:skip_menu) %>
      <nav class="ml-auto flex flex-wrap items-center text-base justify-center">
        <div class="flex">
          <button data-action="click->menu#open" class="flex flex-col items-center text-center">
            <span class="material-icons-outlined">
              menu
            </span>
            <span class="text-xs font-medium">メニュー</span>
          </button>
        </div>
      </nav>
      <%= render "shared/menu" %>
    <% end %>
  </div>
</header>
