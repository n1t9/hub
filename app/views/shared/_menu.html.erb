<div data-menu-target="menu" class="hidden container mx-auto fixed px-4 py-3 inset-0 bg-white z-50">
  <div class="flex justify-end">
    <button data-action="click->menu#toggle" class="flex flex-col items-center text-center">
      <span class="material-icons-outlined">
        close
      </span>
      <span class="text-xs font-medium">とじる</span>
    </button>
  </div>
  <div class="mt-8 max-w-sm mx-auto"> 
    <% if current_user %>
      <div class="py-2">
        <%= link_to user_path(current_user.id) do %>
          <div class="flex items-center space-x-4">
            <div>
              <img src="https://i1.wp.com/cornellsun.com/wp-content/uploads/2020/06/1591119073-screen_shot_2020-06-02_at_10.30.13_am.png" alt="face" class="w-8 h-8">
            </div>
            <div>
              <h5 class="text-xl font-bold tracking-tight"><%= current_user.name %></h5>
              <p class="text-xs text-gray-700">プロフィールを見る</p>
            </div>
          </div>
          <hr class="my-4">
          <div>
            <h4 class="text-md font-bold tracking-tight">記事</h4>
            <a href="#" class="block text-gray-700 mt-2 ml-4">ブックマークした記事</a>
            <hr class="my-4">
            <%= button_to "ログアウト", signout_path, method: :post, class: "w-full text-gray-700 text-left" %>
            <hr class="my-4">
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="py-2">
        <p class="text-lg text-center">ログインまたは新規登録してください</p>
        <div class="flex-row flex space-x-2 mt-8">
          <%= link_to signin_path, class: "flex-1 border font-bold py-2 px-4 rounded text-center" do %>
            ログイン
          <% end %>
          <%= link_to signup_path, class: "flex-1 bg-blue-500 text-white font-bold py-2 px-4 rounded text-center" do %>
            会員登録
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
