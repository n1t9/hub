<div data-menu-target="menu" class="hidden fixed inset-0 bg-white z-50">
  <div class="p-4">
    <div class="flex justify-end">
      <button data-action="click->menu#toggle" class="text-gray-500">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
    <div class="my-4 flex space-x-2">
      <% unless current_user %>
        <%= link_to signin_path, class: "flex-1 border font-bold py-2 px-4 rounded text-center" do %>
          ログイン
        <% end %>
        <%= link_to signup_path, class: "flex-1 bg-blue-500 text-white font-bold py-2 px-4 rounded text-center" do %>
          会員登録
        <% end %>
      <% else %>
        <%= button_to "ログアウト", signout_path, method: :post, class: "flex-1 bg-red-500 text-white py-2 rounded" %>
      <% end %>
    </div>
  </div>
</div>
