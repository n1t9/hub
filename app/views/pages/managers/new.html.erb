<%= content_for :title, t("helpers.pages.edit_managers") %>
<div class="px-4 py-2 bg-white">
  <%= link_to page_path(@page), class: "text-sm underline" do %>
    ←ページへ戻る
  <% end %>
  <div class="mt-6">
    <h2 class="text-lg font-bold"><%= t("helpers.pages.add_manager") %></h2>
  </div>
</div>
<div class="container mx-auto px-4 pt-3 pb-6 bg-white">
  <%= form_with url: page_managers_path(@page), method: :post, class: "grid grid-cols-1 gap-5" do |f| %>
    <div class="flex items-center border-gray-300 py-3">
      <div class="flex-1">
        <div class="flex items-center">
          <div class="flex-1">
            <div class="text-lg font-bold">
              <%= f.select :user_id, @users.map { |u| ["#{u.name} - #{u.email}", u.id] }, {}, class: "block w-full border border-gray-200 rounded px-3 py-2 mt-1 leading-tight text-sm", required: true %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="mt-2 flex justify-end">
      <%= f.submit t("helpers.pages.add_manager"), class: "bg-black text-white font-bold py-2 px-4 rounded text-center cursor-pointer" %>
    </div>
  <% end %>
</div>
