<% content_for :title, t("helpers.pages.new") %>
<div class="px-4 py-2">
  <nav class="flex" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
      <li class="inline-flex items-center">
        <%= link_to root_path, class: "inline-flex items-center text-sm underline" do %>
          <%= t('helpers.top') %>
        <% end %>
      </li>
      <li aria-current="page">
        <div class="flex items-center">
          <svg class="rtl:rotate-180 w-3 h-3 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
          </svg>
          <span class="ms-1 font-medium md:ms-2"><%= t("helpers.mypages.title") %></span>
        </div>
      </li>
    </ol>
  </nav>
</div>
<div class="container mx-auto px-4 pt-3 pb-6 bg-white">
  <h2 class="text-lg font-bold mb-4"><%= t("helpers.pages.new") %></h2>
  <%= form_with model: @page, url: pages_path, method: :post, local: true, class: "grid grid-cols-1 gap-5" do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name, class: "w-full rounded border mt-1 p-2", required: true, maxlength: 20 %>
    </div>
    <div>
      <%= f.label :category_id %>
      <%= f.select :category_id, Category.all.map { |c| [c.name, c.id] }, { include_blank: true }, class: "w-full rounded border mt-1 p-2 text-sm", required: true %>
    </div>
    <div>
      <%= f.label :profile_image %>
      <span class="text-sm text-gray-500 ml-1"><%= t("helpers.optional") %></span>
      <%= f.file_field :profile_image, class: "mt-1 block w-full text-sm cursor-pointer", accept: "image/png, image/jpeg, image/jpg, image/webp, image/avif" %>
    </div>
    <div>
      <%= f.label :url %>
      <span class="text-sm text-gray-500 ml-1"><%= t("helpers.optional") %></span>
      <%= f.text_field :url, class: "w-full rounded border mt-1 p-2", maxlength: 255 %>
    </div>
    <div>
      <%= f.label :bio %>
      <%= f.text_area :bio, class: "w-full rounded border mt-1 p-2", required: true, rows: 4, maxlength: 255 %>
    </div>
    <div class="flex justify-end">
      <%= f.submit t("helpers.pages.new"), class: "bg-black text-white font-bold py-2 px-4 rounded text-center cursor-pointer" %>
    </div>
  <% end %>
</div>
