<div class="px-4 pt-3 pb-6 bg-white">
  <div class="flex items-center">
    <div class="w-16 flex-shrink-0">
      <%= image_tag @page.display_profile_image, class: "w-16 h-16 object-cover rounded" %>
    </div>
    <div class="ml-4">
      <h3 class="font-bold"><%= @page.name %></h3>
    </div>
  </div>
  <p class="mt-3">こちらのページについて、レビューを更新することができます。</p>
  <div class="mt-4">
    <%= form_with url: page_review_path(page_id: @page.id, id: @page_review.id), model: @page_review, method: :patch, local: true do |f| %>
      <div class="mb-4">
        <%= f.label :content, class: "block tracking-wide text-gray-700 font-bold mb-2" %>
        <%= f.text_area :content, class: "w-full rounded border mt-1 p-2", rows: 3, maxlength: 160, placeholder: t("helpers.page_reviews.content") %>
      </div>
      <div class="flex gap-4 justify-end">
        <%= link_to page_review_path(page_id: @page.id, id: @page_review.id), data: { turbo_method: :delete, turbo_confirm: t("flash.delete_confirm") }, class: "text-red-700 font-bold py-2 px-4 rounded cursor-pointer" do %>
          <%= t("helpers.submit.delete") %>
        <% end %>
        <%= f.submit t("helpers.submit.update"), class: "bg-black text-white font-bold py-2 px-4 rounded text-center cursor-pointer", required: true, maxlength: 160 %>
      </div>
    <% end %>
  </div>
</div>
