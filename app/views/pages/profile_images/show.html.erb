<div class="px-4 pt-3 pb-6 bg-white">
  <%= link_to page_path(@page), class: "text-sm underline" do %>
    ←ページへ戻る
  <% end %>
  <div class="mt-4">
    <span class="block text-gray-700 font-bold mb-2">ページ画像</span>
    <%= form_with url: page_profile_image_path, html: { multipart: true, class: "space-y-4" } do |f| %>
      <div class="flex items-center space-x-4">
        <%= image_tag @page.display_profile_image, class: "w-24 h-24 border border-gray-300 object-contain rounded" %>
      </div>
      <div>
        <%= f.label :profile_image, "新しい画像を選択", class: "block text-sm font-medium text-gray-700" %>
        <%= f.file_field :profile_image, class: "mt-1 block w-full text-sm cursor-pointer", accept: "image/png, image/jpeg, image/jpg, image/webp, image/avif" %>
      </div>
      <div class="flex justify-end">
        <%= f.submit "更新する", class: "bg-black text-white py-2 px-4 rounded cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
