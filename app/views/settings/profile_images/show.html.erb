<div class="px-4 pt-3 pb-6 bg-white">
  <%= link_to settings_path, class: "text-sm underline" do %>
    ←設定へ戻る
  <% end %>
  <div class="mt-4">
    <span class="block text-gray-700 font-bold mb-2">プロフィール画像</span>
    <%= form_with url: settings_profile_image_path, html: { multipart: true, class: "space-y-4" } do |f| %>
      <div class="flex items-center">
        <%= image_tag current_user.display_profile_image, class: "w-24 h-24 border border-gray-300 object-cover rounded" %>
      </div>
      <div>
        <%= f.label :profile_image, "新しい画像を選択", class: "block text-sm font-medium text-gray-700" %>
        <%= f.file_field :profile_image, class: "mt-1 block w-full text-sm cursor-pointer", accept: "image/png, image/jpeg, image/jpg, image/webp, image/avif" %>
      </div>
      <div class="mt-4 flex justify-end">
        <%= f.submit t("helpers.submit.update"), class: "bg-black text-white py-2 px-4 rounded cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
