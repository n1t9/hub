<div class="my-6">
  <span class="block text-gray-700 font-bold mb-2">プロフィール画像</span>
  <%= form_with url: settings_profile_image_path, html: { multipart: true, class: "space-y-4" } do |f| %>
    <div class="flex items-center space-x-4">
      <%= image_tag current_user.display_profile_image, class: "w-24 h-24 rounded-full border border-gray-300 object-cover" %>
    </div>
    <div>
      <%= f.label :profile_image, "新しい画像を選択", class: "block text-sm font-medium text-gray-700" %>
      <%= f.file_field :profile_image, class: "mt-1 block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer focus:outline-none focus:border-indigo-500" %>
    </div>
    <div>
      <%= f.submit "更新する", class: "w-full bg-indigo-600 text-white py-2 px-4 rounded hover:bg-indigo-700" %>
    </div>
  <% end %>
</div>
