<div class="px-4 pt-3 pb-6 bg-white">
  <div class="">
    <span class="block text-gray-700 font-bold mb-2">パスワードの変更</span>
    <%= form_with url: settings_password_path, method: :put do |f| %>
      <div class="mt-4">
        <%= f.label :current_password, "現在のパスワード", class: "block tracking-wide text-gray-700 font-bold text-sm mb-2" %>
        <%= f.password_field :current_password, class: "block w-full border border-gray-200 rounded px-3 py-2 mb-3 leading-tight", maxlength: 20, required: true %>
      </div>
      <div class="mt-4">
        <%= f.label :password, "新しいパスワード", class: "block tracking-wide text-gray-700 font-bold text-sm mb-2" %>
        <%= f.password_field :password, class: "block w-full border border-gray-200 rounded px-3 py-2 mb-3 leading-tight", maxlength: 20, required: true %>
      </div>
      <div class="mt-4">
        <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "block tracking-wide text-gray-700 font-bold text-sm mb-2" %>
        <%= f.text_field :password_confirmation, class: "block w-full border border-gray-200 rounded px-3 py-2 mb-3 leading-tight", maxlength: 20, required: true, type: "password" %>      </div>
      <div class="mt-8">
        <%= f.submit "更新する", class: "w-full bg-blue-500 text-white py-2 px-4 rounded cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
