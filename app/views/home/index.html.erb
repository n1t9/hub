<div class="px-4 py-3 bg-white">
  <h2 class="text-xl font-bold">
    新着ポスト
  </h2>
  <ul class="mt-4">
    <% @posts.each do |post| %>
      <li class="py-2 border-b border-gray-300">
        <div class="flex items center">
          <div class="w-1/4">
            <%= image_tag post.image_url, class: "w-24 h-24 object-cover" %>
          </div>
          <div class="w-3/4 pl-4">
            <h3 class="text-lg font-bold"><%= link_to post.title, post_path(post) %></h3>
            <p class="text-sm text-gray-700"><%= post.created_at.strftime("%Y年%m月%d日") %></p>
          </div>
        </div>
      </li>
