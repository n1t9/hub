<div class="px-4 pt-4 pb-2 bg-white">
  <h2 class="text-xl font-bold">
    <%= t("helpers.home.new_posts") %>
  </h2>
  <ul class="mt-4">
    <% @page_posts.each do |post| %>
      <li class="pt-2 pb-3 border-gray-300 <%= "border-b" unless post == @page_posts.last %>">
        <%= link_to page_post_path(post), class: "block flex space-x-2" do %>
          <div class="w-2/3">
            <h3 class="font-bold"><%= post.title %></h3>
          </div>
          <div class="ml-1 w-1/3">
            <%= image_tag post.display_cover_image, class: "object-cover" %>
          </div>
        <% end %>
        <div class="mt-1 flex text-sm text-gray-700">
          <% if current_user.nil? %>
            <%= link_to signin_path, data: { turbo_method: :get, turbo_confirm: t("flash.need_login_confirm") } do %>
              <span class="material-symbols-outlined text-base">
                bookmark
              </span>
            <% end %>
          <% elsif current_user.page_post_bookmark?(post) %>
            <%= link_to page_post_bookmark_path(post.id), data: { turbo_method: :delete, turbo_confirm: t("flash.unbookmark_confirm") } do %>
              <span class="material-icons-outlined text-base">
                bookmark
              </span>
            <% end %>
          <% else %>
            <%= link_to page_post_bookmark_path(post.id), data: { turbo_method: :post } do %>
              <span class="material-symbols-outlined text-base">
                bookmark
              </span>
            <% end %>
          <% end %>
          <%= link_to page_path(post.page), class: "flex" do %>
            <span class="ml-2">
              <%= image_tag post.page.display_profile_image, class: "w-6 h-6" %>
            </span>
            <span class="ml-1">
              <%= post.page.name %>
            </span>
          <% end %>
          <span class="ml-2">
            <%= time_ago_in_words(post.created_at) %><%= t("helpers.time_ago") %>
          </span>
        </div>
        <div class="mt-0.5">
          <ul class="flex flex-wrap">
            <% post.page.keywords.each do |keyword| %>
              <li class="mt-1 mr-1.5">
                <div class="px-1.5 flex items-center rounded border border-gray-400 text-xs leading-5">
                  <span class="text-gray"><%= keyword.name %></span>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </li>
    <% end %>
  </ul>
</div>
