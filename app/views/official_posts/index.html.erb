<div class="px-4 py-2">
  <nav class="flex" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
      <li class="inline-flex items-center">
        <%= link_to root_path, class: "inline-flex items-center text-sm underline" do %>
          <%= t('helpers.top') %>
        <% end %>
      </li>
      <li aria-current="page">
        <div class="flex items-center">
          <svg class="rtl:rotate-180 w-3 h-3 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
          </svg>
          <span class="ms-1 text-lg font-medium md:ms-2"><%= t("helpers.inclusive_hub_editors") %></span>
        </div>
      </li>
    </ol>
  </nav>
</div>
<div class="mt-4 p-4 bg-white">
  <div>
    <%= page_entries_info @official_posts %>
  </div>
  <div>
    <ul class="mt-4">
      <% @official_posts.each do |post| %>
        <li class="pt-2 pb-3 border-gray-300 <%= "border-b" unless post == @official_posts.last %>">
          <%= link_to official_post_path(post), class: "block flex space-x-2" do %>
            <div class="w-2/3">
              <h3 class="font-bold"><%= post.title %></h3>
            </div>
            <div class="ml-1 w-1/3">
              <%= image_tag post.display_cover_image, class: "object-cover" %>
            </div>
          <% end %>
          <div class="mt-1 flex text-sm text-gray-700">
            <% if current_user.nil? %>
              <%= link_to signin_path, data: { turbo_method: :get, turbo_confirm: t("flash.need_login_confirm") } do %>
                <span class="material-symbols-outlined text-base">
                  bookmark
                </span>
              <% end %>
            <% elsif current_user.official_post_bookmark?(post) %>
              <%= link_to official_post_bookmark_path(post.id), data: { turbo_method: :delete, turbo_confirm: t("flash.unbookmark_confirm") } do %>
                <span class="material-icons-outlined text-base">
                  bookmark
                </span>
              <% end %>
            <% else %>
              <%= link_to official_post_bookmark_path(post.id), data: { turbo_method: :post } do %>
                <span class="material-symbols-outlined text-base">
                  bookmark
                </span>
              <% end %>
            <% end %>
            <span class="ml-2">
              <%= t("helpers.home.inclusive_hub_editors") %>
            </span>
            <span class="ml-2">
              <%= time_ago_in_words(post.created_at) %><%= t("helpers.time_ago") %>
            </span>
          </div>
        </li>
      <% end %>
    </ul>
    <div>
      <%= paginate @official_posts %>
    </div>
  </div>
</div>
