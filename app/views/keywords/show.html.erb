<div class="px-4 py-2">
  <nav class="flex" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
      <li class="inline-flex items-center">
        <%= link_to root_path, class: "inline-flex items-center text-sm underline" do %>
          <%= t('helpers.top') %>
        <% end %>
      </li>
      <li aria-current="page">
        <div class="flex items-center">
          <svg class="rtl:rotate-180 w-3 h-3 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
          </svg>
          <%= link_to category_path(@keyword.category), class: "inline-flex items-center text-sm underline" do %>
            <%= @keyword.category.name %>
          <% end %>
        </div>
      </li>
      <li aria-current="page">
        <div class="flex items-center">
          <svg class="rtl:rotate-180 w-3 h-3 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
          </svg>
          <div class="flex items-center rounded bg-white px-3 py-1 text-xs leading-5 border border-gray-500">
            <%= link_to keyword_path(@keyword), class: "text-gray font-bold" do %>
              <%= @keyword.name %>
            <% end %>
          </div>
        </div>
      </li>
    </ol>
  </nav>
</div>
<ul class="flex flex-wrap text-sm font-medium text-center">
  <li class="flex-1 <%= "border-r bg-white" if @genre == 1 %>">
    <%= link_to keyword_path(@keyword, genre: 1), class: "inline-block w-full p-4" do %>
      <%= t("helpers.civilian") %>
    <% end %>
  </li>
  <li class="flex-1 <%= "border-r bg-white" if @genre == 2 %>">
    <%= link_to keyword_path(@keyword, genre: 2), class: "inline-block w-full p-4" do %>
      <%= t("helpers.government") %>
    <% end %>
  </li>
</ul>
<div class="p-4 bg-white">
  <div>
    <%= page_entries_info @pages %>
  </div>
  <div>
    <ul class="mt-4">
      <% @pages.each do |page| %>
        <li class="pt-2 pb-3 border-gray-300 border-b">
          <%= link_to page_path(page), class: "block" do %>
            <div class="flex items-center">
              <div class="w-16 flex-shrink-0">
                <%= image_tag page.display_profile_image, class: "w-16 h-16 object-cover rounded" %>
              </div>
              <div class="ml-4">
                <h3 class="font-bold"><%= page.name %></h3>
                <p class="mt-2 text-sm line-clamp-2 overflow-hidden text-ellipsis break-all"><%= page.bio %></p>
              </div>
            </div>
            <div class="mt-0.5">
              <ul class="flex flex-wrap">
                <% page.keywords.each do |keyword| %>
                  <li class="mt-1 mr-1.5">
                    <div class="px-1.5 flex items-center rounded border border-gray-400 text-xs leading-5">
                      <span class="text-gray"><%= keyword.name %></span>
                    </div>
                  </li>
                <% end %>
              </ul>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
    <div>
      <%= paginate @pages %>
    </div>
  </div>
</div>
