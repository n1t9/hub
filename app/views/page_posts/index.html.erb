<div class="px-4 py-2">
  <nav class="flex" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
      <li class="inline-flex items-center">
        <%= link_to root_path, class: "inline-flex items-center text-sm underline" do %>
          <%= t('helpers.top') %>
        <% end %>
      </li>
      <% if @category %>
        <li>
          <div class="flex items-center">
            <svg class="rtl:rotate-180 w-3 h-3 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
            </svg>
            <%= link_to category_path(@category), class: "ms-1 font-medium md:ms-2 text-sm underline" do %>
              <%= @category.name %>
            <% end %>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <svg class="rtl:rotate-180 w-3 h-3 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
            </svg>
            <span class="ms-1 font-medium md:ms-2"><%= t("helpers.page_posts.index") %></span>
          </div>
        </li>
      <% else %>
        <li>
          <div class="flex items-center">
            <svg class="rtl:rotate-180 w-3 h-3 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
            </svg>
            <span class="ms-1 font-medium md:ms-2"><%= t("helpers.page_posts.index") %></span>
          </div>
        </li>
      <% end %>
    </ol>
  </nav>
</div>
<div class="p-4 bg-white">
  <div>
    <%= page_entries_info @page_posts %>
  </div>
  <div>
    <ul class="mt-4">
      <% @page_posts.each do |post| %>
        <%= render "page_posts/page_post_item", post: post, page_posts: @page_posts %>
      <% end %>
    </ul>
    <div>
      <%= paginate @page_posts %>
    </div>
  </div>
</div>
